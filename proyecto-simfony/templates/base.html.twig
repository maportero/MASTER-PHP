<!doctype html>
<html lang="es">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block title %}Sistema Gestión de Tareas{% endblock %}</title>
        {% block stylesheets %}
            <!-- Bootstrap core CSS -->
            <link rel="stylesheet"
                  href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css"
                  integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy"
                  crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/custom-styles.css') }}" />
        {% endblock %}
    </head>

    <body>

        <header>
            <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
                <div class="container menu-principal">

                    <a class="navbar-brand" href="{{ path('tasks')}}">Inicio</a>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">

                            {% if app.user %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('mytasks') }}">Mis tareas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('task_create') }}">Crear tarea</a>
                                </li>
                                <li class="nav-item right">
                                    <a class="nav-link" href="">{{ app.user.name ~ ', ' ~ app.user.surname }}</a>
                                </li>
                                <li class="nav-item right">
                                    <a class="nav-link" href="{{ path('logout') }}">Cerrar sesión</a>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('login') }}">Iniciar sesión</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('user_register') }}">Registro</a>
                                </li>
                            {% endif %}

                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="container main">
        {% block body %}{% endblock %}
    </main><!-- /.container -->

{% block javascripts %}{% endblock %}
</body>
</html>